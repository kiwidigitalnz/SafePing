# Production Environment Configuration for SafePing

# Main Domain
DOMAIN=safeping.app

# Application URLs
PUBLIC_SITE_URL=https://safeping.app
APP_URL=https://web.safeping.app
PWA_URL=https://my.safeping.app
API_URL=https://api.safeping.app

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration (Resend)
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@safeping.app
RESEND_FROM_NAME=SafePing

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=https://web.safeping.app/auth/callback

# Stripe Configuration
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Push Notifications
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# Monitoring & Analytics
SENTRY_DSN=your_sentry_dsn
GA_TRACKING_ID=your_google_analytics_id

# Feature Flags
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_OFFLINE_MODE=true
ENABLE_WORKER_INVITATIONS=true

# Security
JWT_SECRET=your_jwt_secret
ENCRYPTION_KEY=your_encryption_key

# Worker App Configuration
WORKER_APP_URL=https://my.safeping.app
WORKER_INVITATION_EXPIRY_DAYS=7
MAX_PIN_ATTEMPTS=5
PIN_LOCKOUT_DURATION_MINUTES=30

# Check-in Configuration
DEFAULT_CHECKIN_INTERVAL_MINUTES=30
MAX_CHECKIN_INTERVAL_MINUTES=240
ESCALATION_LEVELS=3
ESCALATION_DELAY_MINUTES=10

# Organization Defaults
DEFAULT_ORGANIZATION_NAME=SafePing
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en

# Support
SUPPORT_EMAIL=support@safeping.app
SUPPORT_PHONE=+1-800-SAFEPING
