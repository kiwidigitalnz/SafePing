{
  "name": "safeping",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "SafePing - Lone Worker Safety Monitoring Application",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "clean": "turbo clean",
    "prepare": "husky install",
    "pre-push": "turbo typecheck && turbo lint && turbo build",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "husky": "^9.0.11",
    "lint-staged": "^16.1.5",
    "supabase": "^2.33.9",
    "turbo": "^2.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.54.0"
  }
}
